<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Blazor Bundler</Title>
    <Description>A Blazor package that bundles bootstraps and Icons</Description>
    <Copyright>2024</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Authors>$(AssemblyName), Solomio Sisante</Authors>
    <PackAsTool>False</PackAsTool>
  </PropertyGroup>
  <ItemGroup>
    <None Update="changelog_*.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <!-- Define content to be included in the NuGet package -->
    <Content Include="content\**\*.*">
      <Pack>true</Pack>
      <PackagePath>content</PackagePath>
      <CopyToOutput>true</CopyToOutput>
    </Content>
  </ItemGroup>

  <!-- Define targets to copy content to wwwroot of consuming project -->
  <Target Name="CopyContentToWwwRoot" AfterTargets="Build">
    <ItemGroup>
      <!-- Copy content files to wwwroot -->
      <ContentWithTargetPath Include="content\**\*.*">
        <TargetPath>wwwroot\%(RecursiveDir)%(FileName)%(Extension)</TargetPath>
      </ContentWithTargetPath>
    </ItemGroup>
  </Target>
</Project>
