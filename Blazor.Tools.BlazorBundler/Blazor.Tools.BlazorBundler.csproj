<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Version>3.0.1</Version>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Blazor Bundler</Title>
    <Authors>$(AssemblyName), Solomio Sisante</Authors>
    <Description>A Blazor package that bundles bootstraps and Icons</Description>
    <Copyright>2024</Copyright>
    <PackageId>Blazor.Tools.BlazorBundler</PackageId>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/xmione/Blazor.Tools/tree/master/Blazor.Tools.BlazorBundler</PackageProjectUrl>
    <RepositoryUrl>https://github.com/xmione/Blazor.Tools.git</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <IncludeSymbols>False</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.Build.Tasks.Pack" Version="6.10.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <!-- Content files to be included in the NuGet package -->
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="changelog_*.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <!-- Add wwwroot files -->
    <Content Include="wwwroot\blazorbootstrap\blazor.bootstrap.css">
      <Pack>true</Pack>
      <PackagePath>\wwwroot\blazorbootstrap\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\blazorbootstrap\blazor.bootstrap.css">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\blazorbootstrap\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\blazorbootstrap\blazor.bootstrap.js">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\blazorbootstrap\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\blazored-typeahead\blazored-typeahead.js">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\blazored-typeahead\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\bootstrap-icons\font\bootstrap-icons.min.css">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\bootstrap-icons\font\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\bootstrap-icons\font\fonts\bootstrap-icons.woff">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\bootstrap-icons\font\fonts\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="wwwroot\bootstrap-icons\font\fonts\bootstrap-icons.woff2">
      <Pack>True</Pack>
      <PackagePath>\wwwroot\bootstrap-icons\font\fonts\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- None item for MSBuild targets file -->
    <None Include="build\Blazor.Tools.BlazorBundler.targets">
      <Pack>True</Pack>
      <PackagePath>build\</PackagePath>
    </None>
    
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
