@* TableSource *@
@using Blazor.Tools.BlazorBundler.Components.TableGrid
@using System.Data
@namespace Blazor.Tools.BlazorBundler.Components.TableGrid

@code {
    [CascadingParameter] private TableGrid Context { get; set; } = default!;
    [Parameter] public string Name { get; set; } = default!;
    [Parameter] public DataTable DataSource { get; set; } = default!;

    protected override void OnParametersSet()
    {
        if (Context != null)
        {
            Context.RegisterDataSource(Name, DataSource);
            //StateHasChanged();
        }

        Console.WriteLine("TableSource OnParametersSetAsync");
    }
}
